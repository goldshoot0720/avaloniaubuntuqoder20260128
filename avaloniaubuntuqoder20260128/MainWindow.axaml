<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:avaloniaubuntuqoder20260128.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="avaloniaubuntuqoder20260128.MainWindow"
        Title="avaloniaubuntuqoder20260128">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left Menu Column -->
            <ColumnDefinition Width="200"/>
            <!-- Right Content Column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Sidebar Menu -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="選單" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,20"/>
                
                <Button Content="首頁" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnHomeClick"/>
                
                <Button Content="儀表板" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnDashboardClick"/>
                
                <Button Content="訂閱管理" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnSubscriptionManagementClick"/>
                
                <Button Content="食品管理" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnFoodManagementClick"/>
                
                <Button Content="影片介紹" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnVideoIntroClick"/>
                
                <Button Content="鋒兄音樂歌詞" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnMusicLyricsClick"/>
                
                <Button Content="銀行統計" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnBankStatisticsClick"/>
                
                <Button Content="關於我們" 
                        Background="#34495E" 
                        Foreground="White"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="OnAboutClick"/>
            </StackPanel>
        </Border>
        
        <!-- Right Content Area -->
        <Border Grid.Column="1" Background="#ECF0F1" Padding="0">
            <ContentControl x:Name="MainContentControl">
                <ScrollViewer Padding="20">
                    <StackPanel x:Name="ContentPanel">
                        <TextBlock Text="歡迎" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="從左側邊欄選擇一個選單項目。" 
                                   FontSize="14" 
                                   Margin="0,0,0,20"/>
                        
                        <!-- Sample Content Cards -->
                        <Border Background="White" 
                                Padding="15" 
                                Margin="0,10" 
                                CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="卡片 1" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="這是範例內容。" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" 
                                Padding="15" 
                                Margin="0,10" 
                                CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="卡片 2" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="更多範例內容。" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="White" 
                                Padding="15" 
                                Margin="0,10" 
                                CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="卡片 3" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="附加內容區域。" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </ContentControl>
        </Border>
    </Grid>
    
</Window>
