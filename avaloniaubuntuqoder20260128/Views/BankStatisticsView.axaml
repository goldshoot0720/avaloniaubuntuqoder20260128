<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="avaloniaubuntuqoder20260128.Views.BankStatisticsView">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 工具列 -->
        <Border Grid.Row="0" Background="#34495E" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="新增銀行" 
                        Background="#27AE60" 
                        Foreground="White"
                        Padding="15,8"
                        Click="OnAddBankClick"/>
                
                <Button Content="重新整理" 
                        Background="#3498DB" 
                        Foreground="White"
                        Padding="15,8"
                        Click="OnRefreshClick"/>
                
                <TextBlock Text="搜尋：" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                
                <TextBox x:Name="SearchTextBox"
                         Width="200"
                         Watermark="輸入銀行名稱..."
                         TextChanged="OnSearchTextChanged"/>
            </StackPanel>
        </Border>
        
        <!-- 統計摘要 -->
        <Border Grid.Row="1" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 總存款 -->
                <Border Grid.Column="0" 
                        Background="#27AE60" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="總存款" 
                                   Foreground="White" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalDepositText" 
                                   Text="$0" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <!-- 總提款 -->
                <Border Grid.Column="1" 
                        Background="#E74C3C" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="總提款" 
                                   Foreground="White" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalWithdrawalsText" 
                                   Text="$0" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <!-- 總轉帳 -->
                <Border Grid.Column="2" 
                        Background="#F39C12" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="總轉帳" 
                                   Foreground="White" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalTransferText" 
                                   Text="$0" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <!-- 淨餘額 -->
                <Border Grid.Column="3" 
                        Background="#3498DB" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="淨餘額" 
                                   Foreground="White" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="NetBalanceText" 
                                   Text="$0" 
                                   Foreground="White" 
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- 銀行清單 -->
        <ScrollViewer Grid.Row="2" Background="#ECF0F1">
            <StackPanel x:Name="BankListPanel" Margin="15"/>
        </ScrollViewer>
    </Grid>
    
</UserControl>
