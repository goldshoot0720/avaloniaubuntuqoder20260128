<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="550"
        x:Class="avaloniaubuntuqoder20260128.Views.FoodEditDialog"
        Title="食品編輯"
        Width="500"
        Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Border Background="#ECF0F1" Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="食品資訊" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            
            <!-- 名稱 -->
            <StackPanel>
                <TextBlock Text="食品名稱 *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Watermark="請輸入食品名稱"/>
            </StackPanel>
            
            <!-- 商店 -->
            <StackPanel>
                <TextBlock Text="商店 *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="ShopTextBox" Watermark="請輸入商店名稱"/>
            </StackPanel>
            
            <!-- 數量 -->
            <StackPanel>
                <TextBlock Text="數量 *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <NumericUpDown x:Name="AmountNumeric" 
                               Minimum="1" 
                               Maximum="9999"
                               Value="1"
                               Increment="1"/>
            </StackPanel>
            
            <!-- 單價 -->
            <StackPanel>
                <TextBlock Text="單價 *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <NumericUpDown x:Name="PriceNumeric" 
                               Minimum="0" 
                               Maximum="999999"
                               Value="0"
                               Increment="1"/>
            </StackPanel>
            
            <!-- 日期 -->
            <StackPanel>
                <TextBlock Text="日期 *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="DatePicker"/>
            </StackPanel>
            
            <!-- 照片網址 -->
            <StackPanel>
                <TextBlock Text="照片網址" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="PhotoTextBox" Watermark="請輸入照片網址（選填）"/>
            </StackPanel>
            
            <!-- 照片雜湊值 -->
            <StackPanel>
                <TextBlock Text="照片雜湊值" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="PhotoHashTextBox" Watermark="請輸入照片雜湊值（選填）"/>
            </StackPanel>
            
            <!-- 按鈕 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10"
                        Margin="0,20,0,0">
                <Button Content="取消" 
                        Padding="20,8"
                        Click="OnCancelClick"/>
                
                <Button Content="儲存" 
                        Background="#27AE60"
                        Foreground="White"
                        Padding="20,8"
                        Click="OnSaveClick"/>
            </StackPanel>
        </StackPanel>
    </Border>
    
</Window>
